<Window x:Class="CorporateSubscriptionManager.RequestFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новая заявка" Height="250" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Выберите сервис:"/>
        <ComboBox Grid.Row="0" Margin="100,0,0,10" ItemsSource="{Binding Services}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedService}"/>
        <Label Grid.Row="1" Content="Обоснование:"/>
        <TextBox Grid.Row="1" Margin="100,0,0,10" Text="{Binding Comment}" AcceptsReturn="True" Height="80"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Command="{Binding SubmitCommand}" Margin="0,0,10,0"/>
            <Button Content="Отмена" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>