<Window x:Class="CorporateSubscriptionManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CorporateSubscriptionManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Левая панель навигации -->
        <StackPanel x:Name="NavPanel" Grid.Column="0" Background="#FFF0F0F0" Margin="0"/>

        <!-- Контент по правую сторону -->
        <ContentControl x:Name="MainContent" Grid.Column="1" />
    </Grid>
</Window>
